{
	"$schema": "http://json.schemastore.org/template",
	"author": "Sanjyot Agureddy",
	"classifications": [
		"Web API",
		"ASP.NET",
		"Clean Architecture"
	],
	"tags": {
		"language": "C#",
		"type": "project"
	},
	"identity": "MeraStore.Services.Sample",
	"name": "MeraStore Solution",
	"shortName": "merastore-sln",
	"sourceName": "MeraStore.Services.Sample",
	"preferNameDirectory": false,
	"symbols": {
		"solution": {
			"type": "parameter",
			"defaultValue": "merastore-service.sln",
			"fileRename": "merastore-sample.sln",
			"description": "The name of the solution file. (add .sln to file name)",
			"dataType": "text",
			"isRequired": true
		}
	},
	"sources": [
		{
			"source": "./",
			"target": "./",
			"exclude": [
				".vs/**/*",
				".git/**/*",
				".template.config/**/*",
				"templates/**/*",
				"**/*.filelist",
				"**/*.user",
				"**/*.lock.json",
				"*.nuspec"
			]
		}
	]
}
